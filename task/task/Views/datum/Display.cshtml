@model IEnumerable<task.datum>

@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>
@{
    task.DataEntry db = new task.DataEntry();
}
@using (Html.BeginForm())
{
    <table border="1">
        <thead>
            <tr>
                <th>Image</th>
                <th>category</th>
                <th>description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in db.data)
            {
                <tr>
                    <td><img src="~/images/@item.category/@item.imagePath" width="100" height="100" /></td>
                    <td>@item.category</td>
                    <td>@item.description</td>
                </tr>
            }
        </tbody>
    </table>
}